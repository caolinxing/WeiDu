<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".ui.fragment.MemberFragment">

    <com.bw.movie.view.MyScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="?attr/actionBarSize">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/h_back"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:alpha="0.5"
                />
            <ImageView
                android:id="@+id/h_head"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:src="@drawable/gakki1"
                />
            <TextView
                android:id="@+id/vip_username"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="姓名" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/layout_radius"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/vip_ticket_record"
                    android:text="我的购票记录"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/back_white"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/layout_radius"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/vip_attention_movie"
                    android:text="我关注的影片"
                    android:drawableRight="@drawable/back_white"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/layout_radius"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/vip_attention_cinema"
                    android:text="我关注的影院"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/back_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/layout_radius"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/vip_recommend"
                    android:text="为你推荐"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/back_white"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:alpha="0.5"
                />

        </android.support.v7.widget.LinearLayoutCompat>
    </com.bw.movie.view.MyScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3086BE" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:text="我的"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

</RelativeLayout>