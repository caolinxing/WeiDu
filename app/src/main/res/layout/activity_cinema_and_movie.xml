<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CinemaAndMovieActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="25dp"
        android:background="@color/zhuti"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back_cinemaandmovie"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/left_white"/>
        <TextView
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影院影片"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/star_white"
            android:id="@+id/iv_star_cinemaandmovie"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cinemaandmovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>