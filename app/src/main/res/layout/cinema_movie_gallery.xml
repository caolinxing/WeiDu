<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="790dp"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cinema_movie_gallery"
        android:layout_width="match_parent"
        android:layout_height="350dp" />
    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
        android:id="@+id/coverflow"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        coverflow:coverHeight="200dp"
        coverflow:coverWidth="100dp"
        coverflow:maxScaleFactor="1.5"
        coverflow:reflectionGap="0px"
        coverflow:rotationThreshold="0.5"
        coverflow:scalingThreshold="0.5"
        coverflow:spacing="0.8" />
    <TextView
        android:id="@+id/tv_name_ciname_movie_gallery"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="解码游戏" />

    <TextView
        android:id="@+id/tv_time_ciname_movie_gallery"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="aslkdjla "
        android:textColor="@color/colorGray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date_ciname_movie_gallery"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/zhuti"
        android:gravity="center"
        android:text="9月5日"
        android:textColor="@color/white" />
</LinearLayout>
