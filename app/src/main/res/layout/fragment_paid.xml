<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.memberfragment.PaidFragment"
    >

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/paid_refresh_layout"
        android:layout_width="match_parent"
        app:srlAccentColor="@color/white"
        app:srlPrimaryColor="@color/zhuti"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/paid_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8ad5d8d6" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/record_null"
        android:layout_centerInParent="true"
        />
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/paid_avl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/zhuti"
        app:indicatorName="BallPulseIndicator" />
</RelativeLayout>